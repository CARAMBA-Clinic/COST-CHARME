{
  "pipeline": {
    "name": "FileFilter2"
  },
   "transform": {
    "image": "novella/my-openms:2",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/mrpo/*;",
    "do",
    "shortname=$(basename $filename)",
    "FileFilter -in ${filename} -out /pfs/out/${shortname} -rt 100:500 -mz 100:500",
    "done"
    ]
  },
"parallelism_spec": {
    "constant": 4
  },
 "input": {
    "atom": {
      "repo": "FeatureLinker",
      "glob": "/*"
    }
  },
  "scale_down_threshold": "5m"
}
